
<div metal:use-macro="layout">
    <div metal:fill-slot="content">
 <div class="container-fluid lightOpacity">


<div class="row">
   <div class="col-md-9 ">
      <div class="panel panel-default">
         <div class="panel-heading">
            
         </div>
         <div class="panel-body">
   
         <form class="form-horizontal" method="post"  role="form">
  
	     <div class="form-group">
		<div class=" col-sm-offset-3 col-sm-9" tal:condition="message">
                	<div class="alert alert-info" role="alert">${message}</div>
        	</div>

	     </div>
             <div class="form-group">
  

                 <label class="col-sm-3 control-label">
                  Title:</label>
                  <div class="col-sm-9">
                     <input type="text" name="class_title" class="form-control" placeholder="Title" required="">
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-3 control-label">
                  Description:</label>
                  <div class="col-sm-9">
                   <textarea class="form-control" name="course_description" rows="5" id="comment"></textarea>
		  </div>
               </div>
               <div class="form-group last">
                  <div class="col-sm-offset-3 col-sm-9">
                     <button type="submit" name="submit.createcourse" class="btn btn-success btn-sm">
                     Create Course</button>
                  </div>
               </div>
            </form>
         </div>
         <div class="panel-footer">
         </div>





      </div>


      <div class="panel panel-default">
         <div class="panel-heading">
	Current Courses
         </div>


	  <!-- Table -->
  <table class="table">
 <thead>
      <tr>
        <th>Course Name</th>
        <th>Access Code</th>
      </tr>
    </thead>
    <tbody>
 <tr tal:repeat="course courses">
      <td tal:content="course.name"></td>
      <td tal:content="course.access_code"></td>
      
    </tr> 
  
  
    </tbody>  

</table>



         
 
            
               
      </div>  


   </div>
</div>




      </div>
    </div>
</div>
